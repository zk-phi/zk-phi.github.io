{
    "name": "zk-phi.github.io",
    "scripts": {
        "postinstall": "patch-package",
        "clean": "rm -r _site",
        "develop": "eleventy --serve",
        "build": "eleventy",
        "opt": "npm run o:font && npm run o:js && npm run o:css",
        "serve": "http-server -p 8000 _site",
        "lighthouse": "npm run build && npm run opt && lhci autorun",
        "o:js": "uglifyjs-folder -e -x .js _site/js -o _site/js",
        "o:css": "cleancss -O2 --batch --batch-suffix '' _site/css/*.css",
        "o:font": "npm run ss:generate:all && npm run ss:generate:index && npm run ss:apply:index",
        "ss:generate:all": "glyphhanger --formats woff2 --subset fonts/* --output _site/fonts/ --suffix '' _site/**/*.html",
        "ss:generate:index": "glyphhanger --formats woff2 --subset fonts/* --output _site/fonts/ --suffix '_subset' _site/index.html",
        "ss:apply:index": "replace '\\.woff2' '_subset.woff2' _site/index.html"
    },
    "devDependencies": {
        "@11ty/eleventy": "^0.12.1",
        "@11ty/eleventy-cache-assets": "^2.1.0",
        "@11ty/eleventy-img": "^0.8.3",
        "@dsquare-gbu/kuroshiro": "^1.1.2-iedev-1",
        "@lhci/cli": "^0.7.0",
        "clean-css-cli": "^5.2.2",
        "fast-xml-parser": "^3.19.0",
        "glyphhanger": "^4.0.1",
        "html-minifier": "^4.0.0",
        "http-server": "^0.12.3",
        "kuroshiro-analyzer-kuromoji": "^1.1.0",
        "markdown-it": "^12.0.4",
        "patch-package": "^6.4.7",
        "replace": "^1.2.0",
        "slugify": "^1.5.0",
        "uglifyjs-folder": "^2.0.0"
    }
}
