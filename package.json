{
    "scripts": {
        "clean": "rm -r _site",
        "develop": "eleventy --serve",
        "build": "eleventy",
        "opt": "npm run o:font && npm run o:html && npm run o:js && npm run o:css && npm run o:svg",
        "serve": "http-server -p 8000 _site",
        "lighthouse": "npm run build && npm run opt && lhci autorun",
        "o:html": "html-minifier --input-dir _site --output-dir _site --file-ext html -c .htmlmin",
        "o:js": "uglifyjs-folder -e -x .js _site/js -o _site/js",
        "o:css": "cleancss -O2 --batch --batch-suffix '' _site/css/*.css",
        "o:svg": "svgo _site/svg/*",
        "o:font": "npm run ss:generate:all && npm run ss:generate:index && npm run ss:apply:index",
        "ss:generate:all": "glyphhanger --formats woff2 --onlyVisible --subset fonts/* --output _site/fonts/ --suffix '' _site/**/*.html",
        "ss:generate:index": "glyphhanger --formats woff2 --onlyVisible --subset fonts/* --output _site/fonts/ --suffix '_subset' _site/index.html",
        "ss:apply:index": "replace '(/fonts/.*)\\.woff2' '$1_subset.woff2' _site/index.html"
    },
    "dependencies": {},
    "devDependencies": {
        "@11ty/eleventy": "^0.11.1",
        "@11ty/eleventy-cache-assets": "^2.1.0",
        "@11ty/eleventy-img": "^0.8.0",
        "@lhci/cli": "^0.7.0",
        "clean-css-cli": "^5.2.0",
        "fast-xml-parser": "^3.18.0",
        "glyphhanger": "^3.2.0",
        "html-minifier": "^4.0.0",
        "http-server": "^0.12.3",
        "patch-package": "^6.2.2",
        "replace": "^1.2.0",
        "svgo": "^2.0.3",
        "uglifyjs-folder": "^2.0.0"
    }
}
